{
    "version": "2.0.0",
    "linux": {
        "options": {
            "shell": {
                "executable": "bash",
                "args": ["-c"]
            }
        }
    },
    "tasks": [
        {
            "label": "build program on Linux",
            "type": "shell",
            "linux": {
                "command": "g++",
                "args": [
                    "-g",
                    "-o",
                    "${workspaceFolder}/${fileBasenameNoExtension}",
                    "${file}"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}